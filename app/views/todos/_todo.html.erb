<tr>
  <td><%= link_to todo.title, todo %></td>
  <td><%= todo.status %></td>
  <td><%= todo.description %></td>
  <td><%= todo.next_action %></td>
  <td><% if todo.project.blank? %> <% else %><%= todo.project.title %><% end %></td>
  <td><%= link_to 'delete', todo, :method => :delete, :confirm => "You sure?", :remote => true %></td>
</tr>

