<table>
  <tr>
    <th>Email</th>
    <th>Roles</th>
    <th></th>
    <th></th>
  </tr>
<% @users.each do |u| %>
  <tr>
    <td><%= link_to_if(can?(:read, User), "#{u.email}", user_path(u.id)) {} %></td>
    <td><%= "#{u.roles.collect{|r| r.name}}" %></td>
    <td><%= link_to_if(can?(:edit, User), image_tag("/images/pencil.png"), edit_user_path(u.id)) {} %></td>
    <td><%= link_to_if(can?(:delete, u), image_tag("/images/delete.png"), u, :confirm => "Are you sure?", :method => :delete) {} %></td>
  </tr>
<% end %>
</table>

